generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  nickname  String @unique
  password  String
  role      Role @default(USER)
  createdAt DateTime @default(now())
  
  groups    UserGroup[]
  guesses   Guess[] 
  createdGroups Group[]
}

enum Role {
  USER
  ADMIN
}

model Group {
  id        String @id @default(uuid())
  name      String
  isPublic  Boolean @default(true)
  createdBy String
  creator   User   @relation(fields: [createdBy], references: [id]) // Relação unidirecional
  createdAt DateTime @default(now())

  @@unique([name, createdBy])

  members UserGroup[]
  Guess Guess[]
}

model UserGroup {
  userId  String
  groupId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([userId, groupId]) // Define uma chave composta
}

model Team {
  id          String @id @default(uuid())
  name        String @unique
  shortName   String?
  logoUrl     String?
  createdAt   DateTime @default(now())

  homeMatches Match[] @relation("HomeTeam")
  awayMatches Match[] @relation("AwayTeam")
}


model Match {
  id            String @id @default(uuid())
  homeTeamId    String
  awayTeamId    String
  matchDate     DateTime
  status        String

  homeTeam Team @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam Team @relation("AwayTeam", fields: [awayTeamId], references: [id])

  guesses   Guess[]
}

model Guess {
  id        String @id @default(uuid())
  userId    String
  groupId   String
  matchId   String
  round     Int
  scoreHome Int
  scoreAway Int
  status    String
  
  user      User @relation(fields: [userId], references: [id])
  group     Group @relation(fields: [groupId], references: [id])
  match     Match @relation(fields: [matchId], references: [id])

  @@unique([userId, groupId, matchId])
  
  @@index([userId]) // Índice para buscar palpites por usuário
  @@index([groupId]) // Índice para buscar palpites por grupo
  @@index([matchId]) // Índice para buscar palpites por jogo
}


